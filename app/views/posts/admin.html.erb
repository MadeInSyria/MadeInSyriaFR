<% provide(:title, 'Posts Admin') %>
<div class="page-header">
  <h1>Posts Admin</h1>
</div>
<h2><%= link_to "New post", new_post_path %></h2>
<ul class="posts">
  <% @posts.each do |post| %>
  <% if post.published %>
    <%= link_to post.title, post %> posted <%= post.created_at %> ago by <%= link_to post.user.name, post.user %>.
  <% else %>
    <%= link_to post.title, preview_path(post.id) %> drafted <%= post.created_at %> ago by <%= link_to post.user.name, post.user %>.
  <% end %>
    <% if signed_in? && current_user.admin? %> 
      | <%= link_to "Delete", post, method: :delete, data: { confirm: "You sure?" } %>
      | <%= link_to "Edit", edit_post_path(post.id) %>
    <% end %> <br />
  <% end %> 
</ul>

<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>