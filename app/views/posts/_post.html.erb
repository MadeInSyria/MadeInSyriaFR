<h1><%= link_to post.title, post %></h1>
<span class="content"><p><%= post.content.html_safe %></p></span>
<span class="timestamp">
  Posted <%= time_ago_in_words(post.created_at) %> ago by <%= link_to post.user.name, post.user %>. <% if signed_in? && current_user.admin? %>
  | <%= link_to "delete", post, method: :delete, data: { confirm: "You sure?" } %> <% end %>
</span>