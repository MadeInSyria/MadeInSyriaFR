<% provide(:title, 'Categories') %>
<div class="page-header">
  <h1>Categories</h1>
</div>
<h2><%= link_to "Create category", new_category_path %></h2>
<ul class="categories">
  <% @categories.each do |category| %>
    <li>
      <span class="category"><%= link_to category.name, category %></span>
      | <%= link_to "Edit", edit_category_path(category) %>
      | <%= link_to "Delete", category, method: :delete, data: { confirm: "You sure?" } %>
    </li> 
  <% end%>
</ul>

<%= will_paginate @categories, renderer: BootstrapPagination::Rails %>