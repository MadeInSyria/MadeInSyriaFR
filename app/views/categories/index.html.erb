<% provide(:title, 'Categories') %>
<% provide(:meta, 'The different categories of posts of MadeInSyria.fr') %>
<div class="page-header">
  <h1>Categories</h1>
</div>
<h2><%= link_to "Create category", new_category_path %></h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Post count</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
  <tr>
    <td><%= link_to category.name, category %></td>
    <td><%= category.posts.count %></td>
    <td>
    <%= link_to "Edit", edit_category_path(category) %>
    | <%= link_to "Delete", category, method: :delete, data: { confirm: "You sure?" } %>
    </td>
  </tr> 
  <% end%>
  </tbody>
</table>
<%= will_paginate @categories, renderer: BootstrapPagination::Rails %>